<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/header_bg2"
        android:elevation="4dp"
        app:navigationIcon="@drawable/ic_back"
        app:title="Mark Student Marks"
        app:titleTextColor="@color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvEvaluationTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Evaluation Title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvTotalMarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Marks: 0"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter marks for each student"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvStudents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btnSubmitMarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit Marks"
                android:backgroundTint="@color/purple_700" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
