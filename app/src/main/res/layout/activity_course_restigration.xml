<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <!-- ===== HEADER ===== -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/header_bg"
            android:padding="20dp">

            <!-- Back Icon -->
            <ImageView
                android:id="@+id/menu_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/menu"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp" />

            <!-- Title -->
            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course Registration"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_toEndOf="@id/menu_icon"
                android:layout_marginStart="56dp"
                android:layout_marginTop="8dp" />

            <!-- Bell -->
            <ImageView
                android:id="@+id/bell_icon"
                android:src="@drawable/notifybutton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="90dp"
                android:layout_toEndOf="@id/title_text"
                android:layout_marginTop="8dp" />

        </RelativeLayout>

        <!-- ===== SEARCH BAR ===== -->
        <LinearLayout
            android:id="@+id/search_container"
            android:layout_width="250dp"
            android:layout_height="38dp"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginStart="42dp"
            android:background="@drawable/search_bg"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/search_edit_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Search Courses"
                android:textColorHint="#949494"
                android:textColor="#000000"
                android:background="@android:color/transparent"
                android:paddingStart="8dp"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/filter_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/filter"
                android:layout_marginStart="70dp" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginTop="16dp" />

        <!-- ===== PROGRESS BAR ===== -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginTop="10dp" />

        <!-- ===== COURSE CARDS (DYNAMIC) ===== -->
        <LinearLayout
            android:id="@+id/courses_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
        </LinearLayout>

        <!-- ===== BOTTOM BAR ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:layout_marginTop="12dp"
            android:background="#FFFFFF">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Register"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:paddingHorizontal="32dp"
                android:background="@drawable/save_button_bg" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:gravity="end">

                <TextView
                    android:id="@+id/selected_courses_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selected: 0 courses"
                    android:textSize="12sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/total_credits_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Credits: 0"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
