<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/card_rounded"
    android:padding="24dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvConfirmTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Mark Update"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#8B2072"
        android:layout_marginBottom="16dp" />

    <!-- Message -->
    <TextView
        android:id="@+id/tvConfirmMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Evaluation details and confirmation message"
        android:textSize="14sp"
        android:textColor="#555555"
        android:lineSpacingMultiplier="1.4"
        android:layout_marginBottom="24dp" />

    <!-- Button Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Cancel Button -->
        <TextView
            android:id="@+id/btnCancelConfirm"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Cancel"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#8B2072"
            android:gravity="center"
            android:background="@drawable/button_attendance"
            android:layout_marginEnd="12dp" />

        <!-- Confirm Button -->
        <TextView
            android:id="@+id/btnConfirm"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Update"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="@drawable/save_button_bg" />

    </LinearLayout>

</LinearLayout>
