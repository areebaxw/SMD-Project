<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/card_rounded"
    android:padding="0dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_header_rounded"
            android:orientation="vertical"
            android:padding="20dp">        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Evaluation Type"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="for New Evaluation"
            android:textSize="14sp"
            android:textColor="#E8D5E8"
            android:gravity="center"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- ListView with evaluation types -->
    <android.widget.ListView
        android:id="@+id/lvEvalTypes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="400dp"
        android:divider="@color/white"
        android:dividerHeight="1dp" />

    <!-- Cancel Button -->
    <TextView
        android:id="@+id/btnCancelSelectType"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Cancel"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#8B2072"
        android:gravity="center"
        android:background="@drawable/button_attendance"
        android:layout_margin="16dp" />

</LinearLayout>
