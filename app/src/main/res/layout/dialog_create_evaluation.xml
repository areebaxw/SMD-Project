<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white">

    <!-- Header Icon with rounded background -->
    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#E8D5E8"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“‹"
            android:textSize="32sp" />
    </LinearLayout>

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create New Evaluation"
        android:textColor="#1C1C1E"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Evaluation Number -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Evaluation Number"
            android:textColor="#8E8E93"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/etEvaluationNum"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/input_rounded"
            android:inputType="number"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:hint="01"
            android:textSize="14sp"
            android:textColorHint="#C7C7CC" />
    </LinearLayout>

    <!-- Total Marks -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Marks"
            android:textColor="#8E8E93"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/etTotalMarks"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/input_rounded"
            android:inputType="number"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:hint="50"
            android:textSize="14sp"
            android:textColorHint="#C7C7CC" />
    </LinearLayout>

    <!-- Weightage -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weightage"
            android:textColor="#8E8E93"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/etWeightage"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/input_rounded"
            android:inputType="number"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:hint="02"
            android:textSize="14sp"
            android:textColorHint="#C7C7CC" />
    </LinearLayout>

    <!-- Topic/Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Topic/Title"
            android:textColor="#8E8E93"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/etTopic"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/input_rounded"
            android:inputType="text"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:hint="Pointers"
            android:textSize="14sp"
            android:textColorHint="#C7C7CC" />
    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/btnCancelEvalDialog"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="Cancel"
            android:textColor="#8B2072"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp" />

        <TextView
            android:id="@+id/btnCreateEval"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="Create"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:background="#8B2072"
            android:layout_marginStart="12dp" />
    </LinearLayout>

</LinearLayout>
