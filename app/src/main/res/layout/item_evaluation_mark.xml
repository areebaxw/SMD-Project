<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/assignment_card_bg"
    android:padding="16dp"
    android:layout_marginBottom="12dp"
    android:gravity="center_vertical">

    <!-- Evaluation Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvEvaluationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assignment 1"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvWeightage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weightage: 2"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvAverage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average: 139"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvHighest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Highest: 100"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvLowest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lowest: 10"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Score Card -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/score_card_bg"
        android:padding="12dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tvObtainedMarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="168"
            android:textColor="#0DE322"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTotalMarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/200"
            android:textColor="#CCCCCC"
            android:textSize="12sp"
            android:layout_marginTop="2dp" />
    </LinearLayout>
</LinearLayout>
