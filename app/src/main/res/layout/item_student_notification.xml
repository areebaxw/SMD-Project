<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notificationCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Unread indicator dot (Apple-style) -->
        <View
            android:id="@+id/unreadDot"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="12dp"
            android:background="@drawable/unread_dot"
            android:visibility="gone" />

        <!-- Notification Icon -->
        <ImageView
            android:id="@+id/ivNotificationIcon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="12dp"
            android:background="@drawable/notification_icon_bg"
            android:padding="10dp"
            android:src="@drawable/ic_notification"
            app:tint="@color/primary" />

        <!-- Content Container -->
        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ivNotificationIcon"
            android:layout_toStartOf="@id/ivDelete"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/tvNotificationTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="New Marks Posted"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Message -->
            <TextView
                android:id="@+id/tvNotificationMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="Your assignment marks for Mobile Application Development have been uploaded."
                android:textColor="#666666"
                android:textSize="14sp" />

            <!-- Time -->
            <TextView
                android:id="@+id/tvNotificationTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="2 hours ago"
                android:textColor="@color/primary"
                android:textSize="12sp"
                android:textStyle="italic" />
        </LinearLayout>

        <!-- Delete/Options Icon (Optional) -->
        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:contentDescription="Delete"
            android:padding="2dp"
            android:src="@drawable/ic_delete"
            android:visibility="gone"
            app:tint="#999999" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
