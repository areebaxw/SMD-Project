<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/square_white"
    android:padding="12dp"
    android:layout_marginBottom="12dp"
    android:gravity="center_vertical">

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_launcher_foreground"
        android:contentDescription="Profile"
        android:layout_marginEnd="12dp"
        android:scaleType="centerCrop"
        android:background="@drawable/profile_circle_bg" />

    <!-- Student Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginEnd="12dp">

        <TextView
            android:id="@+id/studentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abdullah Waheed"
            android:textColor="#333333"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/rollNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roll Number: 23-0000"
            android:textColor="#999999"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Marks Input Section -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/marksLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marks (/50)"
            android:textColor="#666666"
            android:textSize="12sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/marksInput"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:hint="0"
            android:inputType="number"
            android:textColor="#333333"
            android:textSize="14sp"
            android:gravity="center"
            android:background="@drawable/input_border"
            android:padding="8dp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
